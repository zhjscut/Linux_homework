.container{
  display: flex;
  height: 100vh;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
}
.header {
  padding: 30rpx;
  line-height: 1;
}
.title {
  font-size: 60rpx;
  align-items: center;
}
.desc {
  margin-top: 30rpx;
  color: grey;
  font-size: 35rpx;
}
.menu-list {
  display: flex;
  flex-direction: column; 
  margin-top: 15rpx;
}
.menu-item {
  color: #000000;
  display: flex;
  background-color: antiquewhite;
  margin: 15rpx 15rpx;
  flex-direction: column;
}
.menu-item-main {
  display: flex;
  padding: 30rpx 90rpx;
  border-radius: 10rpx;
  align-items: center;
  font-size: 32rpx;
  justify-content: flex-start;
}
