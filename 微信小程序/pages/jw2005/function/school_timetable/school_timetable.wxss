.button-style{    
    background-color: #eee;    
    border-radius: 8rpx;    
    margin: 20rpx;    
}    
.itemView{
  display: flex;
}
.scroll-view{
  background-color: #abc;
}

.table {  
  border: 0px solid darkgray;  
}  
.tr {  
  /* display 设为 flex 让所有字段挤在一行显示 */
  display: flex;     
  width: 100%;   
  /* width: 30px; */
  justify-content: center;  
  height: 3rem;  
  align-items: center;  
}  
.td {  
    width:40%;  
    justify-content: center;  
    text-align: center;  
}  
.bg-w{  
  background: snow;  
}  
.bg-g{  
  background: #E6F3F9;  
}  
.th {  
  width: 40%;  
  justify-content: center;  
  background: #3366FF;  
  color: #fff;  
  display: flex;  
  height: 3rem;  
  align-items: center;  
} 